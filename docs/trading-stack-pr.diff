+# Verify Node.js and npm are available
+if (-not (Get-Command node -ErrorAction SilentlyContinue)) { Write-Error "Node.js 18+ required."; exit 1 }
+if (-not (Get-Command npm -ErrorAction SilentlyContinue)) { Write-Error "npm required."; exit 1 }
+
+# Resolve repo root if not already set
+if (-not $RepoRoot) { $RepoRoot = (Get-Location).Path }
+
+# Install MCP-bitget-trading dependencies (includes CCXT fork via package.json)
+$mcpRepo = Join-Path $RepoRoot "mcp\MCP-bitget-trading"
+if (Test-Path $mcpRepo) {
+  Write-Host "Installing dependencies in $mcpRepo (includes CCXT fork)..."
+  Push-Location $mcpRepo
+  if (Test-Path "package-lock.json") { npm ci } else { npm install }
+  Pop-Location
+} else {
+  Write-Warning "MCP-bitget-trading not found at $mcpRepo; skipping dependency install"
+}
